--// SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")

local LP = Players.LocalPlayer

--// RAYFIELD
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()
local Window = Rayfield:CreateWindow({
    Name = "üì∫ titan tivi man | INSANE",
    LoadingTitle = "titan tivi man",
    LoadingSubtitle = "Script by kencute24",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "TitanTiviMan",
        FileName = "Forsaken_INSANE_NOFLY"
    }
})

--// STATE
local STATE = {
    Speed=false, WalkSpeed=26,
    Jump=false, JumpPower=65,
    Noclip=false,
    Invisible=false,
    ESP=false,
    AutoKill=false,
    TimeStop=false,
    Orbit=false, OrbitSpeed=8, OrbitRadius=8,
    TeleportSpam=false
}

--// UTILS
local function Char()
    return LP.Character or LP.CharacterAdded:Wait()
end
local function HRP(m)
    return m and m:FindFirstChild("HumanoidRootPart")
end
local function Hum(m)
    return m and m:FindFirstChildOfClass("Humanoid")
end

--// TABS
local TMain = Window:CreateTab("‚öô MAIN",4483362458)
local TMove = Window:CreateTab("üöÄ MOVE",4483362458)
local TVis  = Window:CreateTab("üëÅ VISUAL",4483362458)
local TKill = Window:CreateTab("üíÄ KILL",4483362458)
local TAbt  = Window:CreateTab("üìú ABOUT",4483362458)

--==================================================================================================
-- INVISIBLE
--==================================================================================================
local function SetInvisible(v)
    for _,d in pairs(Char():GetDescendants()) do
        if d:IsA("BasePart") then
            d.LocalTransparencyModifier = v and 1 or 0
            d.CastShadow = not v
        elseif d:IsA("Decal") then
            d.Transparency = v and 1 or 0
        end
    end
end
TVis:CreateToggle({
    Name="Invisible",
    CurrentValue=false,
    Callback=function(v) STATE.Invisible=v; SetInvisible(v) end
})

--==================================================================================================
-- SPEED + JUMP (NO BAND)
--==================================================================================================
local SAFE = { WS_MIN=16, WS_MAX=40, JP_MIN=50, JP_MAX=90 }

RunService.RenderStepped:Connect(function()
    local h = Hum(Char())
    if not h then return end

    if STATE.Speed then
        local ws = math.clamp(STATE.WalkSpeed, SAFE.WS_MIN, SAFE.WS_MAX)
        if h.WalkSpeed ~= ws then h.WalkSpeed = ws end
    end
    if STATE.Jump then
        local jp = math.clamp(STATE.JumpPower, SAFE.JP_MIN, SAFE.JP_MAX)
        if h.JumpPower ~= jp then h.JumpPower = jp end
    end
end)

TMove:CreateToggle({Name="Speed (No Band)",CurrentValue=false,Callback=function(v) STATE.Speed=v end})
TMove:CreateSlider({Name="WalkSpeed",Range={16,40},Increment=1,CurrentValue=STATE.WalkSpeed,Callback=function(v) STATE.WalkSpeed=v end})
TMove:CreateToggle({Name="Jump (No Band)",CurrentValue=false,Callback=function(v) STATE.Jump=v end})
TMove:CreateSlider({Name="JumpPower",Range={50,90},Increment=1,CurrentValue=STATE.JumpPower,Callback=function(v) STATE.JumpPower=v end})

--==================================================================================================
-- NOCLIP
--==================================================================================================
RunService.Stepped:Connect(function()
    if STATE.Noclip then
        for _,p in pairs(Char():GetDescendants()) do
            if p:IsA("BasePart") then p.CanCollide=false end
        end
    end
end)
TMove:CreateToggle({Name="Noclip",CurrentValue=false,Callback=function(v) STATE.Noclip=v end})

--==================================================================================================
-- ESP (NAME + BOX)
--==================================================================================================
local function NameESP(head,name)
    if head:FindFirstChild("TTM_ESP") then return end
    local g=Instance.new("BillboardGui",head)
    g.Name="TTM_ESP"; g.Size=UDim2.new(0,200,0,40); g.AlwaysOnTop=true
    local t=Instance.new("TextLabel",g)
    t.Size=UDim2.new(1,0,1,0); t.BackgroundTransparency=1
    t.TextScaled=true; t.TextColor3=Color3.fromRGB(0,255,255); t.Text=name
end
local function BoxESP(m)
    if m:FindFirstChild("TTM_BOX") then return end
    local b=Instance.new("SelectionBox",m)
    b.Name="TTM_BOX"; b.LineThickness=.05; b.Color3=Color3.fromRGB(255,0,255); b.Adornee=m
end
RunService.RenderStepped:Connect(function()
    if STATE.ESP then
        for _,p in pairs(Players:GetPlayers()) do
            if p~=LP and p.Character and p.Character:FindFirstChild("Head") then
                NameESP(p.Character.Head,p.Name)
                BoxESP(p.Character)
            end
        end
    end
end)
TVis:CreateToggle({Name="ESP Player + Box",CurrentValue=false,Callback=function(v) STATE.ESP=v end})

--==================================================================================================
-- AUTO KILL (FORCE)
--==================================================================================================
RunService.Heartbeat:Connect(function()
    if STATE.AutoKill then
        local me=HRP(Char()); if not me then return end
        for _,m in pairs(Workspace:GetChildren()) do
            local h=HRP(m)
            if h and m~=Char() then
                if (h.Position-me.Position).Magnitude < 20 then
                    h.Velocity=(h.Position-me.Position).Unit*220
                end
            end
        end
    end
end)
TKill:CreateToggle({Name="Auto Kill (Force)",CurrentValue=false,Callback=function(v) STATE.AutoKill=v end})

--==================================================================================================
-- FAKE TIME STOP (VISUAL)
--==================================================================================================
RunService.RenderStepped:Connect(function()
    if STATE.TimeStop then
        for _,m in pairs(Workspace:GetChildren()) do
            local h=HRP(m); if h and m~=Char() then h.Anchored=true end
        end
    end
end)
TMain:CreateToggle({
    Name="Fake Time Stop",
    CurrentValue=false,
    Callback=function(v)
        STATE.TimeStop=v
        if not v then
            for _,m in pairs(Workspace:GetChildren()) do
                local h=HRP(m); if h then h.Anchored=false end
            end
        end
    end
})

--==================================================================================================
-- ORBIT
--==================================================================================================
RunService.Heartbeat:Connect(function()
    if STATE.Orbit then
        local me=HRP(Char()); if not me then return end
        for _,p in pairs(Players:GetPlayers()) do
            if p~=LP and p.Character then
                local t=HRP(p.Character); if t then
                    local a=tick()*STATE.OrbitSpeed
                    local off=Vector3.new(math.cos(a)*STATE.OrbitRadius,0,math.sin(a)*STATE.OrbitRadius)
                    me.CFrame=CFrame.new(t.Position+off,t.Position)
                end
            end
        end
    end
end)
TMove:CreateToggle({Name="Orbit Player",CurrentValue=false,Callback=function(v) STATE.Orbit=v end})
TMove:CreateSlider({Name="Orbit Speed",Range={1,20},Increment=1,CurrentValue=STATE.OrbitSpeed,Callback=function(v) STATE.OrbitSpeed=v end})

--==================================================================================================
-- TELEPORT SPAM
--==================================================================================================
RunService.Heartbeat:Connect(function()
    if STATE.TeleportSpam then
        local h=HRP(Char())
        if h then
            h.CFrame=h.CFrame*CFrame.new(math.random(-10,10),math.random(-2,2),math.random(-10,10))
        end
    end
end)
TMove:CreateToggle({Name="Teleport Spam",CurrentValue=false,Callback=function(v) STATE.TeleportSpam=v end})

